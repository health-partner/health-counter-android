<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <ImageView
        android:id="@+id/bluetoothOffButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_bluetooth_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/bluetoothTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="디바이스 연동"
        android:textColor="@color/login_text_color"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/bluetoothSwitchButton"
        app:layout_constraintBottom_toBottomOf="@id/bluetoothSwitchButton"
        app:layout_constraintStart_toEndOf="@id/bluetoothSwitchButton"
        />

    <ImageView
        android:id="@+id/bluetoothOnButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_bluetooth_on"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/bluetoothSwitchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bluetoothOffButton"
        app:layout_constraintStart_toEndOf="@+id/bluetoothOffButton"
        app:layout_constraintTop_toTopOf="@+id/bluetoothOffButton" />

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/bluetoothLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bluetoothOffButton,bluetoothSwitchButton, bluetoothTextView"
        tools:ignore="MissingConstraints" />


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothLayer" />


    <ImageView
        android:id="@+id/userProfileImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:text="님"
        android:textColor="@color/login_text_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfileImageView"
        app:layout_constraintEnd_toStartOf="@+id/userProfileImageView"
        app:layout_constraintTop_toTopOf="@+id/userProfileImageView" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="권대현"
        android:textColor="@color/login_text_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/nimTextView"
        app:layout_constraintEnd_toStartOf="@+id/nimTextView"
        app:layout_constraintTop_toTopOf="@+id/nimTextView" />

    <ProgressBar
        android:id="@+id/dailyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/userProfileImageView"
        android:layout_marginTop="55dp"
        />

    <TextView
        android:id="@+id/dailyProgressBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일일 권장 칼로리 소비량"
        android:textColor="@color/login_text_color"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/dailyProgressBar"
        app:layout_constraintBottom_toTopOf="@id/dailyProgressBar"
        android:layout_marginBottom="7dp"
        />

    <TextView
        android:id="@+id/dailyProgressBarTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 %"
        android:textColor="@color/login_text_color"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@id/dailyProgressBar"
        app:layout_constraintBottom_toTopOf="@id/dailyProgressBar"
        android:layout_marginBottom="7dp"
        />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100kcal 증가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>